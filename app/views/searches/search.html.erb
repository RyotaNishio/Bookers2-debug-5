<% if @range == "User" %>
  <h2>Users search for "<%= @word %>"</h2>
  <table class="table">
    <thead>
      <th>image</th>
      <th>name</th>
      <th>introduction</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:"40x40" %></td>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<h2>Books search for "<%= @word %>"</h2>
  <table class="table">
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= image_tag book.user.get_profile_image, size:"40x40" %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>